{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noImplicitAny": false,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"],
			"$lib/*": ["./src/lib/*"],
			"$app/environment": ["./src/lib/next-compat/environment.ts"],
			"$app/stores": ["./src/lib/next-compat/stores.ts"],
			"$app/navigation": ["./src/lib/next-compat/navigation.ts"],
			"$app/state": ["./src/lib/next-compat/state.ts"]
		}
	},
	"include": ["next-env.d.ts", "app/**/*.ts", "app/**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "src/routes", "src/lib/components"]
}
